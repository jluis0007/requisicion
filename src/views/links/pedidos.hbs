                                                <option value="1">Enero</option>
                                                <option value="2">Febrero</option>
                                                <option value="3">Marzo</option>
                                                <option value="1">Abril</option>
                                                <option value="2">Mayo</option>
                                                <option value="3">Junio</option>
                                                <option value="1">Julio</option>
                                                <option value="2">Agosto</option>
                                                <option value="3">Septiembre</option>
                                                <option value="1">Octubre</option>
                                                <option value="2">Noviembre</option>
                                                <option value="3">Diciembre</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-3">
                                        <!--AQUI PONEMOS LOS TIPOS DE ARTICULOS EXTRAIDOS DE BD CATALOGO-->
                                        <select name="pedidos_tipo_id" class="form-select form-control"
                                            aria-label="Default select example" pal required autofocus>
                                            <option value="" disabled selected hidden>Todos los tipos</option>
                                            {{#each tipos}}
                                            <option value="{{id}}">{{tipo}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    <div class="form-col">
                                        {{!-- <div class="form-group col-md-2"> --}}
                                            <div class="input-group input-group mb-3 ">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="inputGroup-sizing-sm">Cant.</span>
                                                </div>
                                                <input type="number" class="form-control" aria-label="Small"
                                                    aria-describedby="inputGroup-sizing-sm" value="0" default="1"
                                                    placeholder="Cantidad" id="example-number-input">
                                            </div>
                                    </div>
                                    <div class="form-group col-md-5">
                                        <!--AQUI PONEMOS LOS ARTICULOS EXTRAIDOS DE BD-->
                                        <select name="uploaded_file" class="form-select form-control" aria-label="Default select example" id="uploaded_file" required>
                                            <option value="" disabled selected hidden>Elige el artículo que necesitas</option>
                                            {{#each articulos}}
                                            <option value="{{id}}">{{articulo}}</option>
                                            {{/each}}
                                        </select>
                                    </div>

                                </div>
                            </div>


                            <div class="form-col">    
                                <div class="form-group">
                                    <div class="image-preview center-block mx-auto" id="imagePreview">
                                        <img src="../../img/fotos/1.jpg" alt="Image Preview" class="image-preview__image center-block mx-auto" >
                                        <span class="image-preview__default-text center-block mx-auto">Image Prewiew</span>
                                    </div>
                                </div>
                            </div>


                        </div>

                        <div class="form-group">
                            <textarea class="form-control" name="descripcion" aria-label="With textarea"
                                placeholder="Descripción" required disabled></textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block" name="button1">
                                Agregar artículo al carrito
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
