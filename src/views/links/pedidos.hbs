<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/links/pedidos" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Año</label>
                                </div>
                                <select class="custom-select" id="inputGroupSelect01">
                                    <option selected>Elige...</option>
                                    <option value="1">2021</option>
                                    <option value="2">2022</option>
                                    <option value="3">2023</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Mes</label>
                                </div>
                                <select class="custom-select" id="inputGroupSelect01">
                                    <option selected>Elige...</option>
                                    <option value="1">Enero</option>
                                    <option value="2">Febrero</option>
                                    <option value="3">Marzo</option>
                                    <option value="1">Abril</option>
                                    <option value="2">Mayo</option>
                                    <option value="3">Junio</option>
                                    <option value="1">Julio</option>
                                    <option value="2">Agosto</option>
                                    <option value="3">Septiembre</option>
                                    <option value="1">Octubre</option>
                                    <option value="2">Noviembre</option>
                                    <option value="3">Diciembre</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <!--AQUI PONEMOS LOS TIPOS DE ARTICULOS EXTRAIDOS DE BD CATALOGO-->
                            <select name="pedidos_tipo_id" class="form-select form-control" aria-label="Default select example"
                                pal required autofocus>
                                <option value="" disabled selected hidden>Todos los tipos</option>
                                {{#each tipos}}
                                <option value="{{id}}">{{tipo}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <!--AQUI PONEMOS LOS ARTICULOS EXTRAIDOS DE BD-->
                            <select name="pedidos_articulo_id" class="form-select form-control" aria-label="Default select example"
                                pal required autofocus>
                                <option value="" disabled selected hidden>Elige el artículo</option>
                                {{#each articulos}}
                                <option value="{{id}}">{{articulo}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="image-preview center-block mx-auto" id="imagePreview">
                            <img src="" alt="Image Preview" class="image-preview__image center-block mx-auto">
                            <span class="image-preview__default-text center-block mx-auto">Image Prewiew</span>
                        </div>
