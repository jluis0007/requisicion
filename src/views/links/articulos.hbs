<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/links/articulos" method="POST">
                        <div class="form-group">
                            <!--AQUI PONEMOS EL TIPO DE ARTICULO EXTRAIDO DE BD CATALOGO-->
                            <select name="tipo" class="form-select form-control" aria-label="Default select example">
                                <option selected >Tipo de artículo</option>
                                {{#each tipos}}
                                <option value="{{tipo}}">{{tipo}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-dark btn-sm">
                                +
                            </button>
                        </div>
                        {{!-- <div class="form-group">
                            <input type="text" name="tipo" class="form-control" placeholder="Tipo">
                        </div> --}}
                        <div class="form-group">
                            <input type="text" name="articulo" class="form-control" placeholder="Artículo">
                        </div>
                        <div class="form-group">
                            <input type="text" name="foto" class="form-control" placeholder="Dirección de la fotográfia">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Agregar artículo al catálogo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>